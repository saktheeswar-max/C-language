#include<stdio.h>
#include<string.h>
int main()
{   char str1[20];
    int flag;
    printf("enter the NAME:");
    scanf("%s",&str1);
    for(int i=0;i<strlen(str1);i++){
        if(str1[i]=='a'){
            flag=1;
            break;
        }
        else{
            flag=0;
        }
          
    }
    if(flag==1){
        printf("a is present");
        
    }
    else{
        printf("a is not present");
        
    }

}
